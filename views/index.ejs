<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>URL Shortner</title>
</head>
<body>
    <div class="container">
            <h1>URL Shrinker</h1>
        <form action="/" method="post" class = "my-4 form-inline">
            <label for="fullUrl" class="sr-only">URL</label>
            <input required type="url" name="fullUrl" id="fullUrl" placeholder="URL" class="col form-control m-2">
            <button class = "btn btn-success"type="submit">Shrink</button>
    </form>
    <div class="table-striped table-responsive">
    <table class="table  ">
        <thead>
            <tr>
                <!-- <th>Full URL</th> -->
                <th>Short URL</th>
                <th>Clicks</th>
            </tr>
        </thead>
        <tbody>
            <!-- this shortUrls is the same that we passed from the server.js and shortUrl is just one of the Urls -->
            <% shortUrls.forEach(shortUrl=>{%> 
                <tr>
                    <!-- <td><a href="<%=shortUrl.full%>"><%=shortUrl.full%></a></td> -->
                    <td><a id="myCopy" href="<%=shortUrl.short%>"><%=shortUrl.short%></a></td>
                    <td><%=shortUrl.clicks%></td>
                </tr>   
           <% }) %>             
        </tbody>
    </table>
</div>
    <div class="text-center">
        <button id="myButton" class="btn btn-success" onclick="copyFunction()">COPY SHORT URL</button>
    </div>
    </div>
    <script>
        
        function copyFunction(){
            let copiedText = "http://localhost:5000/"+ (document.getElementById("myCopy").innerHTML);
            console.log(copiedText);
            navigator.clipboard.writeText(copiedText);
        }
    </script>  
</body>
</html>